{
  "name": "dechroma",
  "version": "0.1.1",
  "description": "Chroma keying for canvas-manipulated video",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "pnpm clean && pnpm declaration && pnpm bundle",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "bundle": "node --loader ts-node/esm ./esbuild.config.ts",
    "declaration": "tsc --project tsconfig.json",
    "lint": "eslint src --ext .ts",
    "prettier": "npx prettier --write ./src/**/*.{ts,js,json,css,scss,md}",
    "prepublishOnly": "pnpm build"
  },
  "homepage": "https://github.com/richeyphu/dechroma.js#readme",
  "repository": "github:richeyphu/dechroma.js",
  "keywords": [
    "chroma",
    "keying",
    "chromakey",
    "effect",
    "remove",
    "green",
    "screen",
    "html",
    "canvas",
    "video"
  ],
  "author": "phuritd",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  }
}
